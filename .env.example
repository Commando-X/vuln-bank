DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# AI Configuration
DEEPSEEK_API_KEY=you_aint_gon_see_sheet

# ==========================================
# VULNERABILITY TOGGLE SYSTEM
# ==========================================
# Set to 'true' to enable protection, 'false' to demonstrate vulnerability
# These toggles allow switching between vulnerable and hardened states
# for educational and demonstration purposes

# 1. Cross-Site Scripting (XSS) Protection - CWE-79
# Controls whether user input is sanitized in the frontend
XSS_PROTECTION_ENABLED=false

# 2. Security Misconfiguration - CWE-16
# Controls security headers, CORS, debug mode, and secret key strength
SECURITY_HARDENING_ENABLED=false
FLASK_SECRET_KEY=please-generate-a-strong-32-character-or-longer-secret-key
JWT_SECRET_KEY=please-generate-a-strong-32-character-or-longer-jwt-secret
ALLOWED_CORS_ORIGINS=http://localhost:5000,http://localhost:80

# 3. SQL Injection Protection - CWE-89
# Controls whether SQL queries use parameterized queries vs string concatenation
SQL_INJECTION_PROTECTION=false

# 4. Broken Authorization (BOLA) - CWE-285
# Controls whether endpoints verify user ownership of resources
AUTHORIZATION_ENABLED=false

# 5. Information Disclosure Protection - CWE-200
# Controls whether debug endpoints and detailed error messages are exposed
INFORMATION_DISCLOSURE_PROTECTION=false

# 6. Mass Assignment Protection - CWE-915
# Controls whether endpoints validate allowed fields in requests
MASS_ASSIGNMENT_PROTECTION=false

# 7. Server-Side Request Forgery (SSRF) Protection - CWE-918
# Controls URL validation and scheme checking for external requests
SSRF_PROTECTION=false

# 8. Password Hashing - CWE-256/CWE-522
# Controls whether passwords are hashed or stored in plaintext
PASSWORD_HASHING_ENABLED=false

# 9. File Upload Validation - CWE-434
# Controls file type, size, and content validation for uploads
FILE_UPLOAD_VALIDATION=false

# 10. AI Prompt Injection Protection - CWE-94
# Controls input validation and system prompt exposure for AI endpoints
AI_PROMPT_INJECTION_PROTECTION=false